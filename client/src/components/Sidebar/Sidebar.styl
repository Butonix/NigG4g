.section-sidebar {
  width: 192px;
  height: calc(100% - 48px);
  position: fixed;
  z-index: 1;
  overflow: hidden;
  overscroll-behavior: contain;
}

.stealthy-scroll-container {
  box-sizing: content-box;
  width: 100%;
  height: 100%;
  padding-right: 15px;
  padding-top: 24px;
  overflow-y: scroll;
}

a {
  text-decoration: none;
}

a:hover {
  text-decoration: none;
}
