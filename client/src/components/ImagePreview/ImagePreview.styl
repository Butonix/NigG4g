.image-preview {
  width: 100%;
  height: 100%;
  position: relative;
  background-color: #f4f4f4;
  margin-right: 10px;
  overflow: hidden;

  img {
    display: block;
    object-fit: cover;
    width: 100%;
    height: 100%;
  }

  .ip-overlay {
    background-color: rgba(0, 0, 0, 0.5);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: none;

    i {
      position: absolute;
      color: white;
      display: block;
      top: 10px;
      right: 10px;
      cursor: pointer;
      font-size: 15px;
    }
  }

  &:hover {
    .ip-overlay {
      display: block;
    }
  }
}